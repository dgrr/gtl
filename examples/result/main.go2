package main

import (
	"fmt"
	"errors"

	"github.com/dgrr/gtl"
)

func AddEven(a, b int) gtl.Result[int] {
	if a % 2 != 0 || b % 2 != 0 {
		return gtl.Err[int](
			errors.New("a or b is an odd number"))
	}

	return gtl.Ok(a + b)
}

func main() {
	if r := AddEven(2, 1); r.Err() != nil {
		fmt.Printf("error: %s\n", r.Err())
	}

	fmt.Println(
		AddEven(4, 2).Or(-1).V())
}
