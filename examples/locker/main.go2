package main

import (
	"fmt"
	"sync"

	"github.com/dgrr/gtl"
)

func main() {
	var wg sync.WaitGroup

	vec := gtl.NewLocker(
		gtl.NewVec[int]())

	for i := 0; i < 20; i++ {
		wg.Add(1)
		go func(i int) {
			vec.Lock()
			vec.Ptr().Append(i)
			vec.Unlock()
			wg.Done()
		}(i)
	}

	wg.Wait()

	fmt.Println("Values", vec.V())

	*vec.Ptr().BackPtr() += 20
	fmt.Println("Last value of the vector:", vec.V().Back())
}
