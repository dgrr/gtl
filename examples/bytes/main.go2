package main

import (
	"bytes"
	"fmt"

	"github.com/dgrr/gtl"
)

func main() {
	data := bytes.NewReader(
		[]byte("Hello world\r\n1234"))

	b := gtl.Bytes{}
	fmt.Println("len", b.Len())

	b.Resize(32)

	fmt.Println("len after resize", b.Len())

	_, err := b.ReadFrom(data)
	if err != nil {
		panic(err)
	}

	fmt.Println(b.Index('0'))
	fmt.Println(
		b[:b.Index('\r')].String())
}
